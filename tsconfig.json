{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": ["es6"],
    "strict": true,
    "strictNullChecks": true
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
